<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messagees.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %> <!-- autofocus option is here to focus the corresponding input field when the form appears, so we can type directly in it. -->
  <%= f.submit class: "btn btn--secondary" %>
<% end %>